<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id='@+id/main_textview_text'
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Text"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="50sp"
        android:textAlignment="textEnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id='@+id/main_button_division'
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@android:color/holo_blue_light"
        android:onClick="getOperation"
        android:textSize="30dp"
        android:hint="/"
        android:tag="Div"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_textview_text" />

    <Button
        android:id='@+id/main_button_sum'
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@android:color/holo_blue_light"
        android:onClick="getOperation"
        android:textSize="30dp"
        android:hint="+"
        android:tag="Sum"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_button_division" />

    <Button
        android:id='@+id/main_button_subtraction'
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@android:color/holo_blue_light"
        android:onClick="getOperation"
        android:textSize="30dp"
        android:hint="-"
        android:tag="Sub"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_button_sum" />

    <Button
        android:id='@+id/main_button_multiplication'
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@android:color/holo_blue_light"
        android:onClick="getOperation"
        android:textSize="30dp"
        android:hint="*"
        android:tag="Mul"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_button_subtraction" />

    <Button
        android:id='@+id/main_button_1'
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:backgroundTint="@android:color/holo_red_light"
        android:onClick="buttonNumberClickEvent"
        android:textSize="30dp"
        android:hint="1"
        android:tag="1"
        android:textColorHint="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_textview_text" />

    <Button
        android:id='@+id/main_button_2'
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="@android:color/holo_red_light"
        android:onClick="buttonNumberClickEvent"
        android:textSize="30dp"
        android:hint="2"
        android:layout_marginLeft="15dp"
        android:tag="2"
        android:textColorHint="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/main_textview_text"
        app:layout_constraintLeft_toRightOf="@+id/main_button_1"/>

    <Button
        android:id='@+id/main_button_3'
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="@android:color/holo_red_light"
        android:onClick="buttonNumberClickEvent"
        android:textSize="30dp"
        android:hint="3"
        android:tag="3"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColorHint="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/main_textview_text"
        app:layout_constraintLeft_toRightOf="@+id/main_button_2"
        app:layout_constraintRight_toLeftOf="@+id/main_button_division"/>

    <Button
        android:id='@+id/main_button_4'
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:backgroundTint="@android:color/holo_red_light"
        android:onClick="buttonNumberClickEvent"
        android:textSize="30dp"
        android:hint="4"
        android:tag="4"
        android:textColorHint="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_button_1" />

    <Button
        android:id='@+id/main_button_5'
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:backgroundTint="@android:color/holo_red_light"
        android:onClick="buttonNumberClickEvent"
        android:textSize="30dp"
        android:hint="5"
        android:tag="5"
        android:textColorHint="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/main_button_2"
        app:layout_constraintLeft_toRightOf="@+id/main_button_4"
        app:layout_constraintRight_toLeftOf="@+id/main_button_6"/>

    <Button
        android:id='@+id/main_button_6'
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="@android:color/holo_red_light"
        android:onClick="buttonNumberClickEvent"
        android:textSize="30dp"
        android:hint="6"
        android:tag="6"
        android:textColorHint="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/main_button_3"
        app:layout_constraintLeft_toRightOf="@+id/main_button_5"
        app:layout_constraintRight_toLeftOf="@+id/main_button_sum"/>

    <Button
        android:id='@+id/main_button_7'
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:backgroundTint="@android:color/holo_red_light"
        android:onClick="buttonNumberClickEvent"
        android:textSize="30dp"
        android:hint="7"
        android:tag="7"
        android:textColorHint="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_button_4" />

    <Button
        android:id='@+id/main_button_8'
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:backgroundTint="@android:color/holo_red_light"
        android:onClick="buttonNumberClickEvent"
        android:textSize="30dp"
        android:hint="8"
        android:tag="8"
        android:textColorHint="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/main_button_5"
        app:layout_constraintLeft_toRightOf="@+id/main_button_7"
        app:layout_constraintRight_toLeftOf="@+id/main_button_9"/>

    <Button
        android:id='@+id/main_button_9'
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="@android:color/holo_red_light"
        android:onClick="buttonNumberClickEvent"
        android:textSize="30dp"
        android:hint="9"
        android:tag="9"
        android:textColorHint="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/main_button_6"
        app:layout_constraintLeft_toRightOf="@+id/main_button_8"
        app:layout_constraintRight_toLeftOf="@+id/main_button_subtraction"/>

    <Button
        android:id='@+id/main_button_0'
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="@android:color/holo_red_light"
        android:onClick="buttonNumberClickEvent"
        android:textSize="30dp"
        android:hint="0"
        android:tag="0"
        android:textColorHint="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/main_button_7"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/main_button_multiplication"/>

</androidx.constraintlayout.widget.ConstraintLayout>